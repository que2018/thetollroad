{
	"manifest_version": 2,
	"version": "1.0.0",

	"name": "thetollroads",
	"description": "thetollroads data collection tool",

	"browser_action": {
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["jquery.js", "content.js"]
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["jquery.js", "background.js"]
	},
	"permissions": ["tabs"]
}