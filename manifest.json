{
	"manifest_version": 125,
	"version": "1.2.5",
	"name": "thetollroads",
	"description": "thetollroads data collection tool",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["jquery.js"]
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["jquery.js", "background.js"]
	},
	"permissions": [
		"activeTab",
		"background","downloads"
	]
}